# üëª PHANTOM MCP Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# Google Gemini API Key (required for AI features)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Shodan API Key (optional, for enhanced OSINT)
SHODAN_API_KEY=

# VirusTotal API Key (optional, for malware analysis)
VIRUSTOTAL_API_KEY=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable safe mode (prevents dangerous operations)
PHANTOM_SAFE_MODE=true

# Require authorization confirmation for high-risk operations
REQUIRE_AUTH_CONFIRMATION=true

# Maximum concurrent scans allowed
MAX_CONCURRENT_SCANS=3

# Scan timeout in seconds
SCAN_TIMEOUT=300

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
PHANTOM_LOG_LEVEL=INFO

# Log file path
PHANTOM_LOG_FILE=logs/phantom.log

# Enable detailed logging
DETAILED_LOGGING=false

# =============================================================================
# REDIS (Session Management - Optional)
# =============================================================================

# Redis URL for session storage
REDIS_URL=redis://localhost:6379

# Redis database number
REDIS_DB=0

# Session expiration in seconds (1 hour)
SESSION_EXPIRATION=3600

# =============================================================================
# DATABASE (Optional - for persistent storage)
# =============================================================================

# SQLite database path
DATABASE_PATH=phantom.db

# Enable database logging
DB_LOGGING=false

# =============================================================================
# RATE LIMITING
# =============================================================================

# Requests per minute limit
RATE_LIMIT_RPM=60

# Burst size for rate limiting
RATE_LIMIT_BURST=10

# =============================================================================
# SCANNING CONFIGURATION
# =============================================================================

# Default port range for scans (comma-separated or range)
DEFAULT_PORT_RANGE=1-1000

# Nmap scan speed (0-5, where 5 is fastest)
NMAP_SPEED=3

# DNS servers for lookups (comma-separated)
DNS_SERVERS=8.8.8.8,1.1.1.1

# Default user agent for web requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# REPORTING
# =============================================================================

# Report output directory
REPORT_OUTPUT_DIR=reports

# Include screenshots in reports
INCLUDE_SCREENSHOTS=true

# Report format (html, pdf, json)
DEFAULT_REPORT_FORMAT=html

# Company name for reports
COMPANY_NAME=Your Security Company

# =============================================================================
# WORDLISTS
# =============================================================================

# Directory containing wordlists
WORDLIST_DIR=wordlists

# Default subdomain wordlist
SUBDOMAIN_WORDLIST=wordlists/subdomains.txt

# Default directory wordlist
DIRECTORY_WORDLIST=wordlists/directories.txt

# Default password wordlist
PASSWORD_WORDLIST=wordlists/passwords.txt

# =============================================================================
# PROXY SETTINGS (Optional)
# =============================================================================

# HTTP proxy
HTTP_PROXY=

# HTTPS proxy
HTTPS_PROXY=

# SOCKS proxy
SOCKS_PROXY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI-powered analysis
ENABLE_AI_ANALYSIS=true

# Enable automated exploitation (‚ö†Ô∏è USE WITH CAUTION)
ENABLE_AUTO_EXPLOIT=false

# Enable post-exploitation modules (‚ö†Ô∏è USE WITH CAUTION)
ENABLE_POST_EXPLOIT=false

# Enable password attacks
ENABLE_PASSWORD_ATTACKS=false

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Worker threads for concurrent operations
WORKER_THREADS=5

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Verify SSL certificates
VERIFY_SSL=true

# Maximum retries for failed requests
MAX_RETRIES=3

# Cache TTL in seconds
CACHE_TTL=3600
